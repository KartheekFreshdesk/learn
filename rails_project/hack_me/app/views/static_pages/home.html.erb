<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Leaderboard</h3>
      <%= render 'shared/leader_board', :games_played_exists => @games_played_exists, :@users => @users %>
    </div>
    <div class="span8">
      <h3>Active Games</h3>
      <% if active_games? %>
        <%= render 'games/game', :@games => paginated_active_games %>
      <% end %>
    </div>
    <div class="span8">
      <h3>Waiting Games</h3>
      <% if waiting_games? %>
        <%= render 'games/game', :@games => paginated_waiting_games %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Sample App</h1>
    <h2>
      This is the home page for the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>